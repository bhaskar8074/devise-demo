<div class="col-lg-6 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header">
      <h2 class="card-title">sign up</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "users/shared/error_messages", resource: resource %>

<div class="field-group">
<%= f.label :email %><br />
<%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg mt-3" %>
</div>

  <div class="field-group mt-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" , class:"form-control form-control-lg mt-3" %>
  </div>

  <div class="field-group mt-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control form-control-lg mt-3"%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-primary mt-3 mb-3"%>
  </div>
<% end %>

<%= render "users/shared/links" %>
  </div>
  </div>
  </div>
</div>


